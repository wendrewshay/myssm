<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="com.xx.ssm.dao.UserDao">
    <cache-ref namespace="com.xx.ssm.dao.UserDao"/>
  
  <select id="findById" parameterType="Long" resultType="com.xx.ssm.domain.User" useCache="true" flushCache="false">
  	select userid,username,age,gender from user where userid = #{value}
  </select>

    <select id="findList" parameterType="java.util.HashMap" resultType="com.xx.ssm.domain.User" useCache="true">
        select * from user limit #{offset},#{pageSize}
    </select>

    <update id="updateUsername">
        update user set username = #{username} where userid = #{userid}
    </update>
</mapper>
